# EditorConfig é awersome: https://EditorConfig.org

# Arquivo raiz EditorConfig
root = true

# Configurações para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Configurações para arquivos PHP
[*.php]
indent_style = space
indent_size = 4

# Configurações para arquivos Markdown
[*.md]
trim_trailing_whitespace = false

# Configurações para arquivos YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Configurações para arquivos JSON
[*.json]
indent_style = space
indent_size = 2

# Configurações para arquivos HTML/CSS/JavaScript
[*.{html,htm,css,js}]
indent_style = space
indent_size = 2

# Configurações para arquivos SQL
[*.sql]
indent_style = space
indent_size = 2

# Configurações para arquivos de configuração
[*.{xml,conf,config}]
indent_style = space
indent_size = 2 